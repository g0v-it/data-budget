:domain a bgo:Domain ;
    bgo:abstract """

&nbsp;

Valori espressi in milioni di Euro.

&nbsp;

  
[Elaborazione su open data del Ministero dell'Economia e delle Finanze](https://bdap-opendata.mef.gov.it/)

Pubblicato da [Copernicani.it](https://copernicani.it/)

![copernicani](https://g0v-it.github.io/home/logo/copernicani-motto-250x70.png)

"""^^bgo:MDString ;

    # add an item to default navigation menu
    bgo:hasNavigationMenu [ 
    	bgo:withCustomMenuItem 
    		[
				bgo:icon "mdi-database-search" ;
				bgo:title "Analisi personalizzate..." ;
				bgo:link <http://yasgui.org/short/06jf7CtF2>
			],
    		[
				bgo:icon "mdi-webhook" ;
				bgo:title "Linked data..." ;
				bgo:link <http://mef.linkeddata.cloud/resource/welcome>
			]	
    ] ;

    # Use the Option menu with two external links
    bgo:hasOptionMenu [
    	bgo:withCustomMenuItem 
    		[
				bgo:icon "mdi-github-box" ;
				bgo:title "data management platform..." ;
				bgo:link <https://github.com/g0v-it/data-budget>
			] ,
    		[
				bgo:icon "mdi-github-box" ;
				bgo:title "codice frontend..." ;
				bgo:link <https://github.com/g0v-it/web-budget>
			]

    ] ;

    # Add just a couple of shortcuts icons to footer
    bgo:hasFooterMenu [
    	bgo:withCustomMenuItem 
    		[
		    	bgo:icon "mdi-github-box" ;
		    	bgo:title "Seguici su GitHub" ;
				bgo:link <https://github.com/g0v-it>
			] ,
    		[
		    	bgo:title "Termini d'uso" ;
				bgo:link "/terms"^^bgo:route
			]
    ] ;

    # This domain likes social
    bgo:hasSocialSharing 1 ;

    # This should be used if copyright is not present
    bgo:hasCopyrigth "[Credits...](/credits)"^^bgo:MDString ;
    
    bgo:hasOverview :overview ;
    bgo:hasTableView :table_view ;
    bgo:hasCredits :credits_page ;
    bgo:hasTerms :terms_page ;
    bgo:hasAccountView  :account_view ;
.


############################################
# Account view
############################################
:account_view a bgo:AccountView ;
    bgo:amountFormatter :smart_formatter;
    bgo:referenceFormatter :smart_formatter;
    bgo:trendFormatter :trend_formatter;
    
	bgo:hasHistoricalPerspective [
		a bgo:HistoricalPerspective ;
		bgo:title "Storico dell'azione" ;
	    bgo:amountFormatter :smart_formatter
	];
	bgo:hasBreakdownPerspective [
		a bgo:BreakdownPerspective ;
		bgo:title "Dettaglio capitoli di spesa" ;
	    bgo:amountFormatter :smart_formatter;
	    bgo:hasTotalizer :filtered_total_formatter ;
	]
.


############################################
# Formatters and totalizers
############################################
:smart_formatter a bgo:NumberFormatter ;
	bgo:format "%sM€"^^bgo:Template  ;
	bgo:precision 0 ;
	bgo:scaleFactor 0.000001 ;
	bgo:minValue 1 ; 
	bgo:nanFormat "-" ;
	bgo:lessThanMinFormat "meno di 1M€"^^bgo:Template
.

:trend_formatter a bgo:NumberFormatter ;
	bgo:format "%s%"^^bgo:Template  ;
	bgo:scaleFactor 100 ;
	bgo:precision 2 ;
	bgo:maxValue 200;
	bgo:minValue -200 ; 
	bgo:nanFormat "non disponibile" ;
	bgo:moreThanMaxFormat ">200%"^^bgo:Template ;
	bgo:lessThanMinFormat "<-200%"^^bgo:Template
.


:filtered_total_formatter
    a bgo:Totalizer ;
	bgo:format "Totale: %sM€"^^bgo:Template ;
	bgo:filteredFormat "In evidenza: %sM€"^^bgo:Template  ;
	bgo:precision 0 ;
	bgo:scaleFactor 0.000001 ;
	bgo:minValue 1 ; 
	bgo:nanFormat "-" ;
	bgo:lessThanMinFormat "meno di 1M€"^^bgo:Template	;
	bgo:ratioFormatter [
		# a bgo:NumberFormatter
		bgo:format " ( %s% del tot.)"^^bgo:Template  ;
		bgo:precision 2 ;
		bgo:scaleFactor 100 ;
		bgo:maxValue 100 ;
		bgo:minValue 1 ; 
		bgo:moreThanMaxFormat "" ;
		bgo:lessThanMinFormat " (< 1% del tot.)"
	]
.

:grouping_function a bgo:AmountsSum ;
	bgo:hasTotalizer :filtered_total_formatter			
.

