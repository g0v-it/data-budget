{
    "require": {
        "php": "^7.2",
        "linkeddatacenter/usilex": "dev-master",
        "linkeddatacenter/url-rewriter": "dev-master",
        "e-artspace/pimple-env-provider": "dev-master",
        "guzzlehttp/guzzle": "^6.3",
        "zendframework/zend-httphandlerrunner": "^1.0",
        "relay/relay": "2.x@dev",
        "sumeko/http-exception": "^1.1",
        "micheh/psr7-cache": "^0.5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3",
        "middlewares/utils": "^2.1",
        "friendsofphp/php-cs-fixer": "^2.1",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload" : {
        "psr-4": { "g0v\\": "src/" }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpcs src"
        ],
        "cs-fix": "php-cs-fixer fix .",
        "coverage": [
			"apk add --no-cache --repository http://dl-cdn.alpinelinux.org/alpine/edge/community php7-xdebug",
			"docker-php-ext-enable /usr/lib/php7/modules/xdebug.so",
        	"phpunit --coverage-html=tests/coverage"
       	],
        "functional": ". env.dev; php -S 0.0.0.0:8000"
    },
    "config": {
        "process-timeout":      600,
        "preferred-install":    "dist",
        "github-protocols":     ["https"]
    }
}
